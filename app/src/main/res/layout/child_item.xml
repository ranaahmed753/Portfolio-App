<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardviewID"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ripple_effect"
    android:elevation="0dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/rana"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:civ_border_color="@color/violet"/>
        <TextView
            android:id="@+id/user_nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="#28282B"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/user_image_id"
            app:layout_constraintTop_toTopOf="@+id/user_image_id"
            android:text="Ashley Zamberg"/>
        <TextView
            android:id="@+id/user_professionID"
            android:layout_below="@+id/user_nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/user_nameID"
            app:layout_constraintLeft_toRightOf="@+id/user_image_id"
            app:layout_constraintBottom_toBottomOf="@+id/user_image_id"
            android:text="Android Developer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>