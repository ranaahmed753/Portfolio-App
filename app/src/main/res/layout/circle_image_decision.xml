<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/topView"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/custom_view"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/change_photo_buttonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topView"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:text="Change Photo ->"
            android:textSize="15sp"
            android:textColor="#28282B"
            android:textStyle="normal"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/goto_dashboard_buttonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_photo_buttonID"
            android:text="DashBoard ->"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#28282B"
            android:textStyle="normal"
            android:fontFamily="@font/nunito"/>
        <TextView
            android:id="@+id/logout_buttonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goto_dashboard_buttonID"
            android:text="Logout ->"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#28282B"
            android:textStyle="normal"
            android:fontFamily="@font/nunito"/>

        <TextView
            android:id="@+id/edit_profile_buttonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito"
            android:text="Settings ->"
            android:textColor="#28282B"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout_buttonID" />


</androidx.constraintlayout.widget.ConstraintLayout>