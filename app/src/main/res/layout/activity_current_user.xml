<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CurrentUserActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/appbar2">
        <ImageButton
            android:id="@+id/back_button_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/arrow_back"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/portfolio_page_user_image_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/back_button_id"
            app:layout_constraintLeft_toRightOf="@+id/back_button_id"
            app:layout_constraintBottom_toBottomOf="@+id/back_button_id"
            />
        <TextView
            android:id="@+id/dashboardTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/portfolio_page_user_image_id"
            android:text="DashBoard"
            android:textSize="18sp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/back_button_id"
            app:layout_constraintLeft_toRightOf="@+id/portfolio_page_user_image_id"
            app:layout_constraintBottom_toBottomOf="@+id/back_button_id"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/upper_linearLayoutID"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topConstraintLayout"
        app:layout_constraintBottom_toTopOf="@+id/bottomLinearLayout"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/about_cardID"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:background="@drawable/ripple_effect"
            android:layout_margin="5dp"
            android:elevation="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/aboutID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/nunito"
                    android:text="About"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/violet"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/services_cardID"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/ripple_effect"
            android:elevation="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/servicesID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:fontFamily="@font/nunito"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/violet"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomLinearLayout"
        android:layout_below="@+id/upper_linearLayoutID"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper_linearLayoutID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/skills_cardID"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/ripple_effect"
            android:elevation="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/skillsID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:fontFamily="@font/nunito"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/violet"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/work_experience_cardID"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/ripple_effect"
            android:elevation="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/work_experienceID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Experience"
                    android:fontFamily="@font/nunito"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/violet"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>